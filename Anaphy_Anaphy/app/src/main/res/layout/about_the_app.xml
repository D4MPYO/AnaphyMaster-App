<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardview_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Back" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="18dp"
            card_view:cardBackgroundColor="#FAFAFA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/cardview_gradient_background"
                android:gravity="center_horizontal">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/loogo"
                    android:contentDescription="App Logo"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerInside" />

                <!-- Header -->
                <TextView
                    android:id="@+id/aboutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- App Intro -->
                <TextView
                    android:id="@+id/appIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to AnaphyMaster"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/appDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AnaphyMaster is your all-in-one learning companion for mastering Anatomy and Physiology. Designed for medical, nursing, and allied health students, this mobile app offers structured lessons, interactive quizzes, flashcards, and challenges tailored to help you learn more efficiently.\n\nWhether you’re studying for exams or simply curious about how the human body works, AnaphyMaster breaks down complex topics into simplified, engaging content. With visual aids, instant feedback, and gamified learning experiences, you can track your progress and make studying fun and productive—anytime, anywhere."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="16dp" />

                <!-- Developer Info -->
                <TextView
                    android:id="@+id/developerInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nDeveloped by:\nAguirre, Harian Shane C.\nAguirre, Johanna Maureen V.\nDematira, Rhovie Niña\nForbes, Edmon Alex O.\nRasco, Marc Angelo R."
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:gravity="start" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
